<Window x:Class="JTools.FileHashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JTools"
        mc:Ignorable="d"
        Title="FileHashWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="button" Content="打开文件" HorizontalAlignment="Left" Margin="27,20,0,0" VerticalAlignment="Top" Height="43" Width="738" Click="Open_file_Click"/>
        <TextBox x:Name="output_box" HorizontalAlignment="Left" Margin="27,96,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="667" Height="43" FontSize="30" />
        <Button x:Name="copy_button" Content="copy" HorizontalAlignment="Left" Margin="694,96,0,0" VerticalAlignment="Top" Height="43" Width="71" Click="Copy_clipboard_Click"/>

    </Grid>
</Window>
